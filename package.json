{
  "name": "GameLancer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "node node_modules/react-native/local-cli/cli.js run-android",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios",
    "ios-6": "node node_modules/react-native/local-cli/cli.js run-ios --simulator=\"iPhone 6s\"",
    "ios-x": "node node_modules/react-native/local-cli/cli.js run-ios --simulator=\"iPhone X\"",
    "build:android": "rm -rf ./android/build && cd android && ./gradlew assembleRelease"
  },
  "dependencies": {
    "react": "16.8.3",
    "react-native": "0.59.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "babel-jest": "^24.5.0",
    "jest": "^24.5.0",
    "metro-react-native-babel-preset": "^0.53.0",
    "react-test-renderer": "16.8.3"
  },
  "jest": {
    "preset": "react-native"
  }
}
